# Clones Backend Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# SOLANA NETWORK CONFIGURATION
# =============================================================================
RPC_URL=https://api.devnet.solana.com
SOLANA_CLUSTER=devnet

# =============================================================================
# REWARD POOL PROGRAM CONFIGURATION
# =============================================================================
REWARD_POOL_PROGRAM_ID=Fg6PaFpoGXkYsidMpWTK6W2BeZ7FEfcYkg476zPFsLnS
PLATFORM_FEE_PERCENTAGE=10

# Platform Authority (Base64 encoded private key - preferred method)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
PLATFORM_AUTHORITY_PRIVATE_KEY=your_base64_encoded_private_key_here

# Platform Authority Keypair File Path (alternative to private key)
PLATFORM_AUTHORITY_KEYPAIR_PATH=./platform-authority.json

# Platform Treasury Address (where platform fees are collected)
PLATFORM_TREASURY_ADDRESS=your_platform_treasury_wallet_address_here

# =============================================================================
# TOKEN CONFIGURATION
# =============================================================================
USDC_MINT_ADDRESS=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v
CLONES_MINT_ADDRESS=your_clones_token_mint_address_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_URI=mongodb://admin:admin@mongodb:27017/dev?authSource=admin

# =============================================================================
# DEVELOPMENT/TESTING CONFIGURATION
# =============================================================================
NODE_ENV=development
ENABLE_MOCK_REWARD_POOL=true
ENABLE_MOCK_BLOCKCHAIN=true

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
MONITORING_ENABLED=true
MONITORING_POLL_INTERVAL=5000
MONITORING_ALERT_WEBHOOK=your_webhook_url_here
MONITORING_SUSPICIOUS_THRESHOLD=1000

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
RATE_LIMIT_GENERAL_MAX=100
RATE_LIMIT_WITHDRAWAL_MAX=10
RATE_LIMIT_TASK_COMPLETION_MAX=50
RATE_LIMIT_ADMIN_MAX=5
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# PROXY CONFIGURATION (Optional)
# =============================================================================
# HTTP_PROXY=socks5://user:pass@proxy.example.com:1080
# HTTPS_PROXY=socks5://user:pass@proxy.example.com:1080

# =============================================================================
# UNUSED VARIABLES (For Future Features)
# =============================================================================
# The following environment variables are not currently used in the codebase:
# - IPC_SECRET
# - GYM_SECRET  
# - AX_PARSER_SECRET
# These can be removed if not needed for future features.

# =============================================================================
# NOTES
# =============================================================================
# 1. For production, use mainnet RPC_URL and generate new program IDs
# 2. Store sensitive keys securely (use environment variables, not files)
# 3. Configure rate limits based on your application needs
# 4. Set up monitoring webhooks for production alerts
# 5. Use proper database credentials in production
